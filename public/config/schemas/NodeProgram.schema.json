{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "NodeProgram.schema.json",
    "title": "NodeProgramSchema",
    "definitions": {
        "NodeProgram": {
            "title": "NodeProgram",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "nodes": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/NodeInstance"
                    }
                },
                "connections": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/Connection"
                    }
                },
                "$schema": {
                    "type": "string",
                    "format": "uri-reference",
                    "description": "This should point to the file NodeProgram.schema.json."
                }
            },
            "required": [
                "nodes",
                "connections"
            ]
        },
        "NodeInstance": {
            "title": "NodeInstance",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string"
                },
                "display": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "width": {
                            "type": "number"
                        },
                        "x": {
                            "type": "number"
                        },
                        "y": {
                            "type": "number"
                        }
                    },
                    "required": [
                        "width",
                        "x",
                        "y"
                    ]
                },
                "fields": {
                    "$ref": "#/definitions/NodeState"
                }
            },
            "required": [
                "type",
                "display",
                "fields"
            ]
        },
        "NodeState": {
            "type": "object",
            "propertyNames": {
                "type": "string"
            },
            "additionalProperties": {
                "oneOf": [
                    {
                        "type": "object",
                        "properties": {
                            "fieldType": {
                                "const": "InputOutput"
                            },
                            "state": {
                                "$ref": "fields/InputOutput.schema.json#/definitions/InputOutputFieldState"
                            }
                        },
                        "required": [
                            "fieldType",
                            "state"
                        ]
                    },
                    {
                        "type": "object",
                        "properties": {
                            "fieldType": {
                                "const": "List"
                            },
                            "state": {
                                "$ref": "fields/List.schema.json#/definitions/ListFieldState"
                            }
                        },
                        "required": [
                            "fieldType",
                            "state"
                        ]
                    },
                    {
                        "type": "object",
                        "properties": {
                            "fieldType": {
                                "const": "MultiSelect"
                            },
                            "state": {
                                "$ref": "fields/MultiSelect.schema.json#/definitions/MultiSelectFieldState"
                            }
                        },
                        "required": [
                            "fieldType",
                            "state"
                        ]
                    },
                    {
                        "type": "object",
                        "properties": {
                            "fieldType": {
                                "const": "Radio"
                            },
                            "state": {
                                "$ref": "fields/Radio.schema.json#/definitions/RadioFieldState"
                            }
                        },
                        "required": [
                            "fieldType",
                            "state"
                        ]
                    },
                    {
                        "type": "object",
                        "properties": {
                            "fieldType": {
                                "const": "Select"
                            },
                            "state": {
                                "$ref": "fields/Select.schema.json#/definitions/SelectFieldState"
                            }
                        },
                        "required": [
                            "fieldType",
                            "state"
                        ]
                    }
                ]
            }
        },
        "Connection": {
            "title": "Connection",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "source": {
                    "$ref": "#/definitions/Socket"
                },
                "target": {
                    "$ref": "#/definitions/Socket"
                }
            },
            "required": [
                "source",
                "target"
            ]
        },
        "Socket": {
            "title": "Socket",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "nodeKey": {
                    "type": "string"
                },
                "fieldKey": {
                    "type": "string"
                },
                "isInput": {
                    "type": "boolean"
                },
                "socketKey": {
                    "type": "string"
                }
            },
            "required": [
                "nodeKey",
                "fieldKey",
                "isInput",
                "socketKey"
            ]
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/NodeProgram"
        }
    ]
}