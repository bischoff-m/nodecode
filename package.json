{
    "name": "nodecode",
    "version": "0.1.0",
    "author": "Marco Bischoff <bischoff_m@aim.com>",
    "license": "GPL-3.0-or-later",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bischoff-m/nodecode.git"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "scripts": {
        "start": "npm start --prefix packages/nodecode-ui/",
        "prebuild": "npm prebuild --prefix packages/nodecode-ui/",
        "build": "npm build --prefix packages/nodecode-ui/",
        "docs:ui-only": "npm run docs --prefix packages/nodecode-ui/",
        "docs": "npm start --prefix packages/nodecode-docs/",
        "postinstall": "cd packages/nodecode-runtime && pipenv install",
        "backend": "cd packages/nodecode-runtime && pipenv run python kernel_prototype.py"
    },
    "workspaces": [
        "packages/nodecode-ui",
        "packages/nodecode-docs"
    ]
}
